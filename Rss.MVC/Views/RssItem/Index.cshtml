@*@model PagedList.IPagedList<Rss.MVC.ViewModals.RssItemModel>*@

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@using DAL
@using DAL.Extensions

@{
    var resources = from Resource resource in Enum.GetValues(typeof(Resource))
                    select new SelectListItem
                    {
                        Value = resource.ToString(),
                        Text = resource.AsDisplayString()
                    };
}

<h2>Новостная лента</h2>

@using (Ajax.BeginForm("IndexSearch", "RssItem", new AjaxOptions { UpdateTargetId = "results", HttpMethod = "post" }))
{
    @*@Html.AntiForgeryToken()*@
    <p>
        Источник ленты
        @Html.DropDownList("resource",
    new SelectList(resources, "Value", "Text"),
    new { @class = "form-control" })

        @Html.RadioButton("sort", "Date") Сортировать по дате
        @Html.RadioButton("sort", "Url") Сортировать по источнику
    </p>
    <input type="submit" value="Посмотреть" />
}
<br />

<div id="results">
    @Html.Partial("~/Views/Shared/_RssItemGrid.cshtml")
</div>

@*@Scripts.Render("~/scripts/RssItem/Index.js")*@